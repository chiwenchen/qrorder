<h2><%= @restaurant.name %></h2>

<h3>Manu</h3>
<%= link_to 'New Manu', new_restaurant_manu_path(@restaurant), class: 'btn' %>
<% @restaurant.manus.each do |manu| %>
  Dish: <strong><%= manu.dish_name %></strong>
  <br>
  Description: <%= manu.description %>
  <hr>

<% end %>

<h3>Tables</h3>
<% @restaurant.tables.each do |table|%>
  <%= link_to "Table NO. #{table.number}", restaurant_table_path(@restaurant, table) %>
<% end %>
